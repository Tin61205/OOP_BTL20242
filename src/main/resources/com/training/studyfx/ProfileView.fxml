<?xml version="1.0" encoding="UTF-8"?>

   <?import javafx.geometry.Insets?>
   <?import javafx.scene.control.Button?>
   <?import javafx.scene.control.Label?>
   <?import javafx.scene.control.TextField?>
   <?import javafx.scene.image.ImageView?>
   <?import javafx.scene.layout.HBox?>
   <?import javafx.scene.layout.VBox?>

   <VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.training.studyfx.controller.ProfileViewController">
       <padding>
           <Insets bottom="20" left="20" right="20" top="20" />
       </padding>

       <ImageView fx:id="profileImage" fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true" />

       <Button fx:id="changePhotoButton" text="Change Photo" />

       <HBox alignment="CENTER" spacing="10">
           <Label text="Name:" />
           <TextField fx:id="nameField" promptText="Your Name" />
       </HBox>

       <HBox alignment="CENTER" spacing="10">
           <Label text="Email:" />
           <TextField fx:id="emailField" promptText="Your Email" />
       </HBox>

       <HBox alignment="CENTER" spacing="10">
           <Label text="Status:" />
           <TextField fx:id="statusField" promptText="Your Status" />
       </HBox>

       <Button fx:id="saveButton" text="Save Profile" />

       <Label fx:id="saveConfirmationLabel" text="Profile saved successfully!" textFill="green" visible="false" />
   </VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="584.0" prefWidth="950.0" spacing="10" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.training.studyfx.controller.ChatViewController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Username/Identity Section -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #e0e0e0;">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>
        <TextField fx:id="usernameField" prefHeight="39.0" prefWidth="363.0" promptText="Enter your username" style="-fx-background-radius: 20px; -fx-border-radius: 20px; -fx-padding: 8 15;" styleClass="message-input" stylesheets="@../../../styles/ui.css" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Button onAction="#connectToServer" prefHeight="38.0" prefWidth="82.0" style="-fx-background-color: #4568dc; -fx-text-fill: white; -fx-background-radius: 20px; -fx-cursor: hand;" text="Connect">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>
      <Button fx:id="remove_his" mnemonicParsing="false" onAction="#removeHistory" prefHeight="37.0" prefWidth="89.0" stylesheets="@../../../styles/ui.css" text="Remove">
         <styleClass>
            <String fx:value="user-message" />
            <String fx:value="button-selected" />
         </styleClass>
      </Button>
    </HBox>

    <!-- Chat Messages Area -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 10px; -fx-background-radius: 10px;" VBox.vgrow="ALWAYS">
        <content>
            <StackPane>
                <VBox fx:id="chatContainer" prefWidth="599.0" spacing="15" style="-fx-background-color: white; -fx-padding: 15px;">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
               <children>
                      <Text fx:id="emptyStateText" fill="#a0a0a0" text="No messages yet. Connect and start chatting!" visible="true">
                          <font>
                              <Font size="15.0" />
                          </font>
                      </Text>
               </children>
                </VBox>
            </StackPane>
        </content>
    </ScrollPane>

    <!-- Message Input Area -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #e0e0e0;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <TextField fx:id="messageField" minWidth="450.0" onAction="#sendMessage" prefHeight="36.0" prefWidth="450.0" promptText="Type a message" style="-fx-background-radius: 20px; -fx-border-radius: 20px; -fx-padding: 8 15;" styleClass="message-input" stylesheets="@../../../styles/ui.css" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Button fx:id="emojiButton" onAction="#showEmojiPicker" styleClass="search-box" stylesheets="@../../../styles/ui.css" text="ðŸ˜Š" />

        <ImageView fitHeight="40.0" fitWidth="36.0" onMouseClicked="#sendMessage" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@../../../images/send_.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
    </HBox>
</VBox>

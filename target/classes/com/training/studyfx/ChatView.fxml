<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="580.0" prefWidth="810.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.training.studyfx.controller.ChatViewController">
    <HBox spacing="10">
        <TextField fx:id="usernameField" promptText="Enter username" />
        <Button onAction="#connectToServer" text="Connect" />
    </HBox>

    <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />

    <HBox spacing="10">
        <TextField fx:id="messageField" onAction="#sendMessage" promptText="Type your message here" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMessage" text="Send" />
    </HBox>
</VBox>

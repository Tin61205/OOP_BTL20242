<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="584.0" prefWidth="633.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.training.studyfx.controller.ProfileViewController">
       <padding>
           <Insets bottom="20" left="20" right="20" top="20" />
       </padding>

       <ImageView fx:id="profileImage" fitHeight="150" fitWidth="206.0" pickOnBounds="true" preserveRatio="true" />

       <Button fx:id="changePhotoButton" text="Change Photo" />

       <HBox alignment="CENTER" spacing="10">
           <Label text="Name:" />
           <TextField fx:id="nameField" promptText="Your Name" />
       </HBox>

       <HBox alignment="CENTER" spacing="10">
           <Label text="Email:" />
           <TextField fx:id="emailField" promptText="Your Email" />
       </HBox>

       <HBox alignment="CENTER" spacing="10">
           <Label text="Status:" />
           <TextField fx:id="statusField" promptText="Your Status" />
       </HBox>

       <Button fx:id="saveButton" text="Save Profile" />

       <Label fx:id="saveConfirmationLabel" text="Profile saved successfully!" textFill="green" visible="false" />
   </VBox>
